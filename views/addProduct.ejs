<%-include ("./partials/navbar.ejs")%>
<div class="container login-container">
    <div class="jumbotron">
        <div class="container header-container">
            
            <p id="add-text">Add Product</p>
        </div>
        <%- include ("./partials/messages") %>

        <form action="/auth/addProduct" method="POST">
            <div class="form-group">
              <label for="formGroupExampleInput2">Product Title</label>
              <input type="text" name="name" class="form-control"  placeholder="Another input"
              value="<%= typeof name != 'undefined'? name : '' %>"
              >
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Product Price</label>
                <input type="text" name="price"  class="form-control"  placeholder="Price in Rupees Upto 2 Decimal Places"
                pattern="[0-9]+(\.[0-9]{1,2})?%?"
                value="<%= typeof price != 'undefined'? price : '' %>"
                >
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Short Description</label>
                <input type="text" name="sdesc"  class="form-control" placeholder="Example input"
                value="<%= typeof sdesc != 'undefined'? sdesc : '' %>"
                >
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Long Description</label>
                <textarea type="text" name="description" class="form-control" placeholder="This Product is awesome"></textarea>
            </div>
            <button type="submit" class="btn register-button btn-success">Submit</button>
          </form>
    </div>
</div>